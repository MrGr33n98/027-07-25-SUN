# =============================================================================
# SolarConnect Environment Variables
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3001"
PORT=3001

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Local Development
DATABASE_URL="postgresql://postgres:123456@localhost:5434/solarconnect"

# Production Examples:
# Neon: DATABASE_URL="postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/solarconnect"
# Supabase: DATABASE_URL="postgresql://postgres:password@db.xxx.supabase.co:5432/postgres"
# Railway: DATABASE_URL="postgresql://postgres:password@containers-us-west-xxx.railway.app:5432/railway"

# -----------------------------------------------------------------------------
# Authentication (NextAuth.js)
# -----------------------------------------------------------------------------
NEXTAUTH_URL="http://localhost:3001"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# -----------------------------------------------------------------------------
# Email Service (Resend)
# -----------------------------------------------------------------------------
RESEND_API_KEY=""
# Get your API key from: https://resend.com/api-keys

# -----------------------------------------------------------------------------
# File Upload (UploadThing)
# -----------------------------------------------------------------------------
UPLOADTHING_SECRET=""
UPLOADTHING_APP_ID=""
# Get your credentials from: https://uploadthing.com/dashboard

# -----------------------------------------------------------------------------
# Caching (Redis) - Optional
# -----------------------------------------------------------------------------
REDIS_URL=""
REDIS_TOKEN=""
# Upstash Redis: https://upstash.com/

# -----------------------------------------------------------------------------
# Monitoring & Analytics
# -----------------------------------------------------------------------------
# Google Analytics
NEXT_PUBLIC_GA_ID=""

# Sentry Error Tracking
SENTRY_DSN=""

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING="true"

# -----------------------------------------------------------------------------
# Security & Rate Limiting
# -----------------------------------------------------------------------------
ENABLE_RATE_LIMITING="true"
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL="info"
# Options: error, warn, info, debug

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_EMAIL_VERIFICATION="false"
ENABLE_COMPANY_VERIFICATION="false"
ENABLE_ADVANCED_SEARCH="true"

# -----------------------------------------------------------------------------
# Development Only
# -----------------------------------------------------------------------------
# Disable telemetry in development
NEXT_TELEMETRY_DISABLED=1

# Enable detailed error pages
SHOW_ERROR_DETAILS="true"